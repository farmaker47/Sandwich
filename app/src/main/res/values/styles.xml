<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imageOfFood">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/imageHeight</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/sandwich_picture_content_description</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="linearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="textViewHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

</resources>
